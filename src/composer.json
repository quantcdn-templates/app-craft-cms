{
    "name": "quantcdn-templates/app-craft-cms",
    "description": "Craft CMS template for Quant Cloud",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "craftcms/cms": "^5.0",
        "craftcms/ckeditor": "^4.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "craftcms/generator": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "modules\\": "modules/"
        }
    },
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
